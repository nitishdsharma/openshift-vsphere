{
  "builders": [
    {
      "CPUs": "{{user `vm_vcpu`}}",
      "RAM": "{{user `vm_memory`}}",
      "boot_command": [
        "<tab>",
	"<wait>",
        " sudo coreos-installer install /dev/sda --image-url {{user `ocp_url_image`}} --insecure",
	"<enter>",
	"<wait100>",
        " sudo coreos-installer install /dev/sda --ignition-url {{user `ocp_url_ign`}} --insecure-ignition",
	"<enter>",
	"<wait150>",
	"<enter>",
	" sudo reboot",
	"<enter>",
        "<enter>"
      ],
      "boot_order": "disk,cdrom",
      "boot_wait": "60s",
      "cluster": "{{user `vcenter_cluster`}}",
